<%= form_for post do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
    <br> <br>
    <%= f.label :content %> <br>
    <%= f.text_area :content, size: "60x12" %>
    <br><br>
    Categories: <br>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, options={include_hidden: false}) %>
    <br><br>
    New Category: <br>
    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>
        
    <br><br>
    <%= f.submit %>
<% end %>
